<root>
    <action name="request_help">
        <explanation>make a request to a human for help or support</explanation>
        <synonyms>seek assistance</synonyms>
        <synonyms>ask for help</synonyms>
        <synonyms>request aid</synonyms>
        <synonyms>call for support</synonyms>
        <synonyms>seek support</synonyms>
        <synonyms>ask for assistance</synonyms>
        <synonyms>request for help</synonyms>
        <synonyms>if both conditions are met</synonyms>
        <synonyms>execute the action of request help</synonyms>
        <synonyms>pick up the remote control</synonyms><synonyms>report if necessary</synonyms><synonyms>solicit help</synonyms>
        <pattern>^(seek|ask|request|call|solicit).*(assist|help|aid|support)</pattern>
    </action>
</root>